<?xml version="1.0" encoding="utf-8"?>


<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <View
        android:id="@+id/paddingView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ccff"
        />
    <com.example.danganguan.TitleLayout2
        android:id="@+id/titlelayout"
        android:layout_width="match_parent"
        android:layout_below="@+id/paddingView"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="12dp"
        android:layout_weight="0"
        android:orientation="horizontal"
        android:id="@+id/relativeLayout3">

        <ImageView
            android:id="@+id/gaitouImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/operate" />

        <TextView
            android:id="@+id/gaitouText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="18dp"
            android:layout_marginStart="18dp"
            android:layout_toEndOf="@+id/gaitouImage"
            android:layout_toRightOf="@+id/gaitouImage"
            android:layout_weight="1"
            android:text="更换头像"
            android:textSize="20dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/titlelayout"
        android:layout_marginTop="13dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gainiImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/begin2" />

        <TextView
            android:id="@+id/gainiText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="17dp"
            android:layout_marginStart="17dp"
            android:layout_toEndOf="@+id/gainiImage"
            android:layout_toRightOf="@+id/gainiImage"
            android:layout_weight="4"
            android:text="更改昵称"
            android:textSize="20dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/relativeLayout3"
        android:layout_marginTop="14dp"
        android:layout_weight="0"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/gaimiImage"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="0"
            app:srcCompat="@drawable/operate" />

        <TextView
            android:id="@+id/gaimiText"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="19dp"
            android:layout_marginStart="19dp"
            android:layout_toEndOf="@+id/gaimiImage"
            android:layout_toRightOf="@+id/gaimiImage"
            android:layout_weight="1"
            android:text="更改密码"
            android:textSize="20dp" />

    </LinearLayout>


</RelativeLayout>

