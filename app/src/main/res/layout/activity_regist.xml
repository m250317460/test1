<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_width="match_parent">
    <View
        android:id="@+id/paddingView1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#00ccff"
        />
    <com.example.danganguan.TitleLayout2
        android:id="@+id/titlelayout1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/paddingView1"
        android:background="#00ccff"/>
    <com.example.danganguan.BorderRelativeLayout
        android:id="@+id/L1"
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="30dp"
        android:layout_below="@+id/titlelayout1"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">
        <TextView
            android:id="@id/name"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="right|center_vertical"
            android:text="真实姓名："/>

        <EditText
            android:id="@+id/etname"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:cursorVisible="true"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_toEndOf="@+id/name"
            android:layout_toRightOf="@+id/name" />


    </com.example.danganguan.BorderRelativeLayout>
    <com.example.danganguan.BorderRelativeLayout
        android:id="@+id/L2"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/L1"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/number"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:maxLines="1"
            android:gravity="right|center_vertical"
            android:text="手机号："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etnumber"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@null"
            android:layout_alignParentTop="true"
            android:cursorVisible="true"
            android:ems="10"
            android:textCursorDrawable="@drawable/edit_cursor_color"
            android:layout_toRightOf="@+id/number"
            android:layout_toEndOf="@+id/number"/>
    </com.example.danganguan.BorderRelativeLayout>
    <com.example.danganguan.BorderRelativeLayout
        android:id="@+id/L3"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_below="@+id/L2"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/idcard"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:maxLines="1"
            android:text="身份证号："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etidcard"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPersonName"
            android:layout_toEndOf="@id/idcard"
            android:layout_toRightOf="@+id/idcard"
            android:textCursorDrawable="@drawable/edit_cursor_color" />
    </com.example.danganguan.BorderRelativeLayout>
    <com.example.danganguan.BorderRelativeLayout
        android:id="@+id/L4"
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_height="30dp"
        android:layout_below="@+id/L3"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/password"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:layout_marginLeft="15dp"
            android:gravity="right"
            android:maxLines="1"
            android:text="密码："
            android:textSize="15sp" />

        <EditText
            android:id="@+id/etpassword"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginRight="5dp"
            android:background="@null"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPassword"
            android:layout_toRightOf="@+id/password"
            android:layout_toEndOf="@+id/password"
            android:textCursorDrawable="@drawable/edit_cursor_color" />

    </com.example.danganguan.BorderRelativeLayout>

    <Button
        android:id="@+id/regist"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/L4"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="127dp"
        android:background="#00CCFF"
        android:text="确 定"
        android:textColor="#FFFFFFFF" />
</RelativeLayout>