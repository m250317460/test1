<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_width="match_parent">
        <View
            android:id="@+id/paddingView1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:background="#00ccff"
            />
        <com.example.danganguan.TitleLayout2
            android:id="@+id/titlelayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/paddingView1"
            android:background="#00ccff"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/tz1"/>
        <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="5dp"/>

        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/tz2"/>
        <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="5dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/tz3"/>
        <View
            android:layout_width="match_parent"
            android:background="#fff"
            android:layout_height="5dp"/>
        <ImageView
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="@drawable/tz3"/>
    </LinearLayout>
</ScrollView>